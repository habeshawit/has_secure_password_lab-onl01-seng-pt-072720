<%if logged_in?%>
  h1>Hi, <%=@user.name%></h1>

  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout'>
  <% end %>

<%else%>
  <h1>Welcome! Sign in below or Create a New Account</h1>

  <h1>Log In: </h1>

  <%= form_for :user, url: '/users' do |f| %>
    Username: <%= f.text_field :name %><br>
    Password: <%= f.password_field :password %><br>
    <%= f.submit "Log In" %>
  <% end %>
  <br>
  Sign up for a new account: 
  <%= link_to "Sign Up", new_user_path%>
<%end%>